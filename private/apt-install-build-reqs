pkgs_base='
build-essential
djvulibre-bin
libdjvulibre-dev
libexiv2-dev
libgraphicsmagick++-dev
libpoppler-dev
pkg-config
uuid-dev
'
pkgs_autotools='
autoconf
automake
gettext
libtool
'
pkgs_tests='
python-nose
'
pkgs_prepare_tests='
fonts-linuxlibertine
python-imaging
texlive-base
texlive-fonts-recommended
texlive-xetex
'
pkgs="$pkgs_base"

usage()
{
    printf '%s [--vcs] [--tests]\n' "$0"
}

args=$(getopt -n "$0" -o 'h' --long 'help,vcs,tests' -- "$@")
if [ $? -ne 0 ]
then
    usage >&2
    exit 1
fi
opt_vcs=
opt_tests=
eval set -- "$args"
while true
do
    case "$1" in
        -h|--help) usage; exit 0;;
        --vcs) opt_vcs=y; shift;;
        --tests) opt_tests=y ; shift;;
        --) shift; break;;
        *) printf '%s: internal error (%s)\n' "$0" "$1" >&2; exit 1;;
    esac
done

[ "$opt_tests" ] && pkgs="$pkgs $pkgs_tests"
[ "$opt_vcs" ] && pkgs="$pkgs $pkgs_autotools"
[ "$opt_vcs" ] && [ "$opt_tests" ] && pkgs="$pkgs $pkgs_prepare_tests"

PS4='# '
set -e
(
    set -x
    apt-get install $pkgs
)
if ! dpkg -L libpoppler-dev | grep -q -E '/GfxState[.]h$'
then
(
    set -x
    apt-get install libpoppler-private-dev
)
fi

# vim:ts=4 sts=4 sw=4 et
