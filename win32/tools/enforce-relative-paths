use strict;
use warnings;

use Cwd qw(getcwd);

my $cwd = getcwd() or die;
my @argv = map { my $x = $_; $x =~ s{\Q$cwd/}{./}; $x; } @ARGV;
exec { $argv[0] } @argv or die;

